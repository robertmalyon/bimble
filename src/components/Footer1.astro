---
const today = new Date();
---

<section id="footer-1" class="footer">
  <div class="footer__container">
    <div class="footer__top">
      <a href="/" aria-label="Go back to home" class="footer__logo-link"> </a>
      <div class="footer__list"></div>
    </div>
    <div class="footer__bottom">
      <!--Footer1Socials component here-->
      <span class="footer__copyright"
        >Â© Copyright {today.getFullYear()} - <span class="footer__link--brand"
          >Lovingly created in about two hours by Robert Malyon. Made with HTML,
          CSS, <a href="https://astro.build/">Astro JS</a> and images from <a
            href="https://unsplash.com/">Unsplash</a
          ></span
        >
      </span>
    </div>
  </div>
  <!--Background-->
  <picture class="footer__background">
    <!--Mobile Image-->
    <source media="(max-width: 600px)" srcset="/footer.jpg" />
    <!--Tablet and above Image-->
    <source media="(min-width: 601px)" srcset="/footer.jpg" />
    <img
      loading="lazy"
      decoding="async"
      src="/footer.jpg"
      alt="kids"
      width="1280"
      height="568"
    />
  </picture>
</section>

<style>
  /* Base styles for the footer */
  .footer {
    padding: var(--section-padding, 5rem 1rem);
    position: relative;
    z-index: 1;
  }
  .footer__container {
    width: 100%;
    max-width: var(--container-max, 80rem);
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .footer__top,
  .footer__bottom {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }
  .footer__top {
    margin-bottom: clamp(2rem, 4vw, 2.5rem);
    padding-bottom: clamp(2rem, 4vw, 2.5rem);
    border-bottom: 1px solid #484848;
    justify-content: center;
  }
  .footer__list {
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: clamp(1.75rem, 4vw, 2.5rem);
  }
  .footer__list :global(a) {
    font-size: clamp(0.875rem, 1.5vw, 1rem);
    line-height: 1.5;
    text-decoration: none;
    color: var(--text-white, #fafbfc);
    transition: color 0.3s;
  }
  .footer__list :global(a):hover {
    color: var(--link-hover, red);
  }
  .footer__list :global(a).nav-content-active-link {
    color: var(--active-link, red);
  }
  .footer__logo-link {
    width: 10.5rem;
    display: block;
  }
  .footer__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    display: block;
  }
  .footer__background:before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: var(--overlay-dark-color, rgba(8, 19, 15, 0.9));
    z-index: 1;
  }
  .footer__background img {
    object-fit: cover;
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .footer__copyright {
    color: var(--text-white-muted, #bababa);
  }
  .footer__link--brand {
    color: var(--text-white-muted, #fafbfc);
    text-decoration: none;
    transition: color 0.3s;
  }
  .footer__link:hover {
    color: var(--link-hover, red);
  }

  /* Adjustments for larger screens */
  @media only screen and (min-width: 48rem) {
    .footer__top,
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
